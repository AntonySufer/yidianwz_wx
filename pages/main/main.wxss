 }

 button::after{
  border: none;
}

.end-tit{
  width: 100%;
  text-align: center;
  font-size: 16pt;
  color: #b2b2b2;
}

.end-tit-bottom{
  height: 20rpx;
  background: #f2f2f2;
  width: 100%;
}

.moment-con{
  width: 750rpx;
  position: fixed;
  bottom: 0rpx;
}
.moment-con .moment-text{
  width: 100%;
  padding: 20rpx 20rpx 20rpx 20rpx ;
  background-color: #F8F8F8;
}
.common-btn{
  background-color: #e5e5e5 !important;
  border-radius: 0 !important;
}


.text-con{
  width: 100%;
  border-bottom: 1rpx solid #F8F8F8;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
}

.text-con-left{
    margin-left: 20rpx;
    width: 10%;
    float: left;
}
.text-con-left image{
    width: 64rpx;
    height: 64rpx;
    border-radius: 30rpx;
}

.text-con-right{
    width: 80%;
    float: left;
}

.text-con-right  .textfz{
  color: #999999;
  font-size: 11pt;
}



.c-state1{
  transform: rotate(0deg) scale(1) translate(35%,0%); 
  -webkit-transform: rotate(0deg) scale(1) translate(35%,0%); 
}
.c-state2{
   transform: rotate(0deg) scale(1) translate(0%,0%); 
  -webkit-transform: rotate(0deg) scale(1) translate(0%,0%); 
}
 