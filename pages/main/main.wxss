/* pages/main/main.wxss */

@import "/wxParse/wxParse.wxss";
.page-bottom{
  height: 100%;
  width: 750rpx;
  position: fixed; 
  background-color:#24292C;
  z-index: 0;
}
.page-content{
  padding-top: 20rpx;
  padding-left: 20rpx;
}
.userinfo {
  width:208rpx;
 text-align: center;
}

.userinfo-avatar {
  width: 128rpx;
  margin: 40rpx 40rpx 0 40rpx ;
  height: 128rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  width: 208rpx;
  margin-top: 10rpx;
  color: #aaa;
  font-size: 14pt;
  height: 40rpx;
  line-height: 40rpx;
  display: block;
 
}

.wc{
   width:208rpx;
 text-align: center;
  color: #fff;
  font-size: 17pt;
  padding: 20rpx 0  0 ;
}

.wc:active{
  color: #b2b2b2;
}

.page-top{
  height: 100%;
  position: fixed;
  width: 100%;
  background-color: #fff;
  z-index: 0;
  transition: All 0.4s ease; 
  -webkit-transition: All 0.4s ease;
  overflow-y: auto;
}
.page-top .top-img{
  position: fixed;
  background: #fff;
  border-bottom: 2rpx solid #FBFBFB;
  padding-top:20rpx; 
  width: 750rpx;
}
.top-img> image{
  width: 48rpx;
  height: 48rpx;
  margin-left: 30rpx;
 
}
.main-List{
   overflow: auto ;
   width: 100%;
   padding: 0 0;
   padding-top: 10rpx;
}

.main-List .main-title{
  padding: 20rpx 30rpx 0 30rpx;
  display: block;
  font-size: 20pt;
  line-height: 70rpx;
  letter-spacing: 1rpx;

}
.main-List .main-auther{
  padding: 15rpx 30rpx 0 30rpx;
  display: inline-block;
  line-height: 60rpx;
  color:#b2b2b2;
  font-size: 11pt;
}
.main-tit-img{
    margin-top:100rpx;
    padding: 0rpx 30rpx 0 30rpx;
    text-align: center;
}
.main-tit-img >image{
   height: 375rpx;
   width: 690rpx;
   max-width: 690rpx;
 }


 .main-con-li {
   padding: 10rpx 30rpx 50rpx 30rpx;
    overflow:auto !important ;
    font-size: 18pt ;
    color: #353535;
 }

